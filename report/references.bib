@article{__2022-1,
  title        = {浅谈垂直绿化在城市园林中的作用},
  abstract     = {目前我国城市化处于快速发展阶段，随着绿色环保等理念的提出，人们对城市化发展以及城市绿化也有了更高的要求。城市绿化在一定程度上标志着城市现代化程度，其对城市园林建设与发展产生了重要作用。但实际上我国城市建筑密度较大，绿化面积与建筑用地之间的矛盾是城市化进程面临的重要问题。在此背景下部分城市逐渐对垂直绿化相关内容与作用产生了一定了解，并且在城市园林绿化建设中逐渐广泛应用这一概念以改善城市生态环境，且取得了显著效果。对此本文就垂直绿化相关内容进行分析，并探讨其在城市园林中的作用及运用策略，以期为其他城市园林应用提供一定参考。},
  pages        = {100--102},
  number       = {9},
  journaltitle = {居业},
  author       = {刘阳},
  date         = {2022},
  note         = {{ISBN}: 2095-4085},
  keywords     = {垂直化;城市园林;生态;绿化方式}
}

@article{__1998,
